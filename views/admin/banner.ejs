<%- include('partials/header.ejs') -%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css">
  <link rel="stylesheet" href="/admin/banner/style.css">
  </head>

  <body>
        <div class="container-fluid">
          <div class="row flex-nowrap">
            <!-- Sidebar -->
            <div class="d-flex flex-column  p-3 text-white vh-100 col-md-2" style="width: 250px;">
              <ul class="nav nav-pills flex-column ">
                <li>
                  <a href="/admin/dashboard" class="nav-link text-dark">
                    <img class="idealLogo" src="/image/icons/idealLogo.svg" alt="iDeal Log">
                  </a>
                </li>
              </ul>
              <p class="text-uppercase text-primary navMainHeading mt-3">Menu</p>
              <ul class="nav nav-pills flex-column ">
                <li class="nav-item">
                  <a href="/admin/dashboard"  class="nav-link text-dark">
                    <i class="fas fa-th-large"></i> Dashboard
                  </a>
                </li>
                <li>
                  <a href="/admin/product" class="nav-link text-dark">
                    <i class="fas fa-box"></i> Products
                  </a>
                </li>
                <li>
                  <a href="/admin/orders" class="nav-link text-dark">
                    <i class="fas fa-shopping-cart"></i> Orders
                  </a>
                </li>
                <li>
                  <a href="/admin/return" class="nav-link text-dark">
                    <i class="fas fa-undo"></i> Returns
                  </a>
                </li>
                <li>
                  <a href="/admin/coupon" class="nav-link text-dark">
                    <i class="fas fa-ticket-alt"></i> Coupon
                  </a>
                </li>
                <li>
                  <a href="/admin/banner" class="nav-link text-dark active">
                    <i class="fas fa-image"></i> Banner
                  </a>
                </li>
                <li>
                  <a href="/admin/transaction" class="nav-link text-dark">
                    <i class="fas fa-exchange-alt"></i> Transaction
                  </a>
                </li>
                <li>
                  <a href="/admin/offer" class="nav-link text-dark">
                    <i class="fas fa-tag"></i> Offer
                  </a>
                </li>
                <li>
                  <a href="/admin/sales" class="nav-link text-dark">
                    <i class="fas fa-money-bill-wave"></i> Sales
                  </a>
                </li>
              </ul>

              <p class="text-uppercase text-primary mt-4 mb-2 navMainHeading">User Management</p>
              <ul class="nav nav-pills flex-column ">
                <li>
                  <a href="/admin/customers" class="nav-link text-dark">
                    <i class="fas fa-users"></i> Customers
                  </a>
                </li>
              </ul>
            </div>
            <div class="col-md-10 p-4">
              <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Banner</h2>
                <div class="d-flex align-items-center">

                  <!-- Admin Profile -->
                  <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" id="adminDropdown"
                      data-bs-toggle="dropdown" aria-expanded="false">
                      <%= username %>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                      <li><a class="dropdown-item" href="/admin/logout">Logout</a></li>
                    </ul>
                  </div>
                </div>
              </div>

              <div class="container mt-5">
                <!-- Current Banner Section -->
                <div class="banner-section mb-5">
                    <h4 class="mb-3">Current Offer Banner</h4>
                    <img id="currentOfferBanner" src="" alt="Current Offer Banner" class="banner-image">
                </div>
        
                <!-- Upload New Banner Section -->
                <div class="banner-section mb-5">
                    <h4 class="mb-3">Upload New Offer Banner</h4>
                    <div class="upload-container">
                        <i class="fas fa-upload"></i>
                        <p class="mt-2">Drag and drop an image here or click to upload</p>
                        <input type="file" class="form-control-file d-none" id="offerBannerInput" accept="image/*">
                        <button class="btn btn-outline-primary mt-3" onclick="document.getElementById('offerBannerInput').click()">Add Image</button>
                    </div>
                </div>
        
                <!-- Home Page Banner Section -->
                <div class="banner-section mb-5">
                    <h4 class="mb-3">Home Page Banner</h4>
                    <img id="homePageBanner" src="" alt="Home Page Banner" class="banner-image">
                </div>
        
                <!-- Upload New Home Page Banner Section -->
                <div class="banner-section">
                    <h4 class="mb-3">Upload New One</h4>
                    <div class="upload-container">
                        <i class="fas fa-upload"></i>
                        <p class="mt-2">Drag and drop an image here or click to upload</p>
                        <input type="file" class="form-control-file d-none" id="homePageBannerInput" accept="image/*">
                        <button class="btn btn-outline-primary mt-3" onclick="document.getElementById('homePageBannerInput').click()">Add Image</button>
                    </div>
                </div>
              </div>

            </div>

          </div>
        </div>


        <div class="modal fade" id="cropperModal" tabindex="-1" aria-labelledby="cropperModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg">
              <div class="modal-content">
                  <div class="modal-header">
                      <h5 class="modal-title" id="cropperModalLabel">Crop Image</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                      <div class="cropper-container">
                          <img id="cropperImage" src="" alt="Crop Image" style="max-width: 100%;">
                      </div>
                  </div>
                  <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                      <button type="button" class="btn btn-primary" id="cropImageBtn">Crop</button>
                  </div>
              </div>
          </div>
      </div>

      <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        <script src="/admin/banner/script.js"></script>


        <%- include('partials/footer.ejs') -%>