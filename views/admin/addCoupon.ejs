<%- include('partials/header.ejs') -%>
  <link rel="stylesheet" href="/admin/addCoupon/style.css">
  </head>

  <body>
        <div class="container-fluid">
          <div class="row flex-nowrap">
            <!-- Sidebar -->
            <div class="d-flex flex-column  p-3 text-white vh-100 col-md-2" style="width: 250px;">
              <ul class="nav nav-pills flex-column ">
                <li>
                  <a href="#" class="nav-link text-dark">
                    <img class="idealLogo" src="/image/icons/idealLogo.svg" alt="iDeal Log">
                  </a>
                </li>
              </ul>
              <p class="text-uppercase text-primary navMainHeading mt-3">Menu</p>
              <ul class="nav nav-pills flex-column ">
                <li class="nav-item">
                  <a href="/admin/dashboard" class="nav-link text-dark">
                    <i class="fas fa-th-large"></i> Dashboard
                  </a>
                </li>
                <li>
                  <a href="/admin/product"  class="nav-link text-dark">
                    <i class="fas fa-box"></i> Products
                  </a>
                </li>
                <li>
                  <a href="/admin/orders" class="nav-link text-dark">
                    <i class="fas fa-shopping-cart"></i> Orders
                  </a>
                </li>
                <li>
                  <a href="/admin/coupon" class="nav-link active">
                    <i class="fas fa-ticket-alt"></i> Coupon
                  </a>
                </li>
                <li>
                  <a href="/admin/banner" class="nav-link text-dark">
                    <i class="fas fa-image"></i> Banner
                  </a>
                </li>
                <li>
                  <a href="/admin/transaction" class="nav-link text-dark">
                    <i class="fas fa-exchange-alt"></i> Transaction
                  </a>
                </li>
                <li>
                  <a href="/admin/transaction" class="nav-link text-dark">
                    <i class="fas fa-tag"></i> Offer
                  </a>
                </li>
                <li>
                  <a href="/admin/transaction"  class="nav-link text-dark">
                    <i class="fas fa-money-bill-wave"></i> Sales
                  </a>
                </li>
              </ul>

              <p class="text-uppercase text-primary mt-4 mb-2 navMainHeading">User Management</p>
              <ul class="nav nav-pills flex-column ">
                <li>
                  <a href="/admin/manageAdmin" class="nav-link text-dark">
                    <i class="fas fa-user-cog"></i> Manage Admins
                  </a>
                </li>
                <li>
                  <a href="/admin/customers" class="nav-link text-dark">
                    <i class="fas fa-users"></i> Customers
                  </a>
                </li>
              </ul>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 p-4">
              <!-- Top Navbar -->
              <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Add New Coupon</h2>
                <div class="d-flex align-items-center">
                  <!-- Search Bar -->
                  <input type="text" class="form-control me-3 w-50" placeholder="Search...">

                  <!-- Admin Profile -->
                  <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" id="adminDropdown"
                      data-bs-toggle="dropdown" aria-expanded="false">
                      <%= username %>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                      <li><a class="dropdown-item" href="/admin/logout">Logout</a></li>
                    </ul>
                  </div>
                </div>
              </div>

              <!-- Breadcrumb and Actions -->
              <div class="d-flex justify-content-between align-items-center mb-3">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/admin/dashboard"
                        class="breadcrumb-item-style-atag">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/admin/coupon"
                          class="breadcrumb-item-style-atag">Coupon</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Add Coupon</li>
                  </ol>
                </nav>

              </div>

              <div class="container mt-5">
                <div class="card">
                  <div class="card-body">
                    <form>
                      <div class="row g-3">
                          <!-- Coupon Code -->
                          <div class="col-md-6">
                              <label for="couponCode" class="form-label">Coupon Code</label>
                              <input type="text" class="form-control" id="couponCode" placeholder="Enter coupon code" required>
                          </div>
                  
                          <!-- Coupon Description -->
                          <div class="col-md-6">
                              <label for="description" class="form-label">Description</label>
                              <textarea class="form-control" id="description" placeholder="Enter coupon description" required></textarea>
                          </div>
                  
                          <!-- Discount Percentage -->
                          <div class="col-md-6">
                              <label for="discountPercentage" class="form-label">Discount (%)</label>
                              <input type="number" class="form-control" id="discountPercentage" placeholder="Enter discount percentage" min="1" max="100" required>
                          </div>
                  
                          <!-- Maximum Discount -->
                          <div class="col-md-6">
                              <label for="maximumDiscount" class="form-label">Maximum Discount (₹)</label>
                              <input type="number" class="form-control" id="maximumDiscount" placeholder="Enter maximum discount amount" required>
                          </div>
                  
                          <!-- Minimum Purchase -->
                          <div class="col-md-6">
                              <label for="minimumPurchase" class="form-label">Minimum Purchase (₹)</label>
                              <input type="number" class="form-control" id="minimumPurchase" placeholder="Enter minimum purchase amount" required>
                          </div>
                  
                          <!-- Start Date -->
                          <div class="col-md-6">
                              <label for="startDate" class="form-label">Start Date</label>
                              <input type="date" class="form-control" id="startDate" required>
                          </div>
                  
                          <!-- End Date -->
                          <div class="col-md-6">
                              <label for="endDate" class="form-label">End Date</label>
                              <input type="date" class="form-control" id="endDate" required>
                          </div>
                  
                          <!-- Usage Limit -->
                          <div class="col-md-6">
                              <label for="usageLimit" class="form-label">Maximum Usage Limit</label>
                              <input type="number" class="form-control" id="usageLimit" placeholder="Enter maximum usage limit" required>
                          </div>
                
                      </div>
                  
                      <!-- Submit Button -->
                      <div class="mt-4 text-end">
                          <button type="submit" class="btn btn-primary">Add Coupon</button>
                      </div>
                  </form>
                  
                  </div>
                </div>
              </div>
 
            </div>
          </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>



        <div class="modal fade" id="deleteConfirmationModal" tabindex="-1"
          aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                Are you sure you want to delete this product? This action cannot be undone.
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton">Delete</button>
              </div>
            </div>
          </div>
        </div>
        <script src="/admin/addCoupon/script.js"></script>
        <%- include('partials/footer.ejs') -%>