<%- include('partials/header.ejs') -%>

  <link rel="stylesheet" href="/admin/addCatogary/style.css">
  </head>

  <body>
    <% if (message && errBoolean) { %>
      <div id="alertBox" class="alert alert-success" role="alert">
        <%= message %>
      </div>
      <% } else if (message && !errBoolean) { %>
        <div id="alertBox" class="alert alert-danger" role="alert">
          <%= message %>
        </div>
        <% } %>
          <div class="container-fluid">
            <div class="row">
              <!-- Sidebar -->
              <div class="d-flex flex-column p-3 text-white vh-100 " style="width: 250px;">
                <ul class="nav nav-pills flex-column ">
                  <li>
                    <a href="#" class="nav-link text-dark">
                      <img class="idealLogo" src="/image/icons/idealLogo.svg" alt="iDeal Log">
                    </a>
                  </li>
                </ul>
                <p class="text-uppercase text-primary navMainHeading mt-3">Menu</p>
                <ul class="nav nav-pills flex-column ">
                  <li class="nav-item">
                    <a href="/admin/dashboard" class="nav-link text-dark">
                      <i class="fas fa-th-large"></i> Dashboard
                    </a>
                  </li>
                  <li>
                    <a href="/admin/product" class="nav-link active">
                      <i class="fas fa-box"></i> Products
                    </a>
                  </li>
                  <li>
                    <a href="/admin/orders" class="nav-link text-dark">
                      <i class="fas fa-shopping-cart"></i> Orders
                    </a>
                  </li>
                  <li>
                    <a href="/admin/return" class="nav-link text-dark">
                      <i class="fas fa-undo"></i> Returns
                    </a>
                  </li>
                  <li>
                    <a href="/admin/coupon" class="nav-link text-dark">
                      <i class="fas fa-ticket-alt"></i> Coupon
                    </a>
                  </li>
                  <li>
                    <a href="/admin/banner" class="nav-link text-dark">
                      <i class="fas fa-image"></i> Banner
                    </a>
                  </li>
                  <li>
                    <a href="/admin/transaction" class="nav-link text-dark">
                      <i class="fas fa-exchange-alt"></i> Transaction
                    </a>
                  </li>
                  <li>
                    <a href="/admin/offer" class="nav-link text-dark">
                      <i class="fas fa-tag"></i> Offer
                    </a>
                  </li>
                  <li>
                    <a href="/admin/sales" class="nav-link text-dark">
                      <i class="fas fa-money-bill-wave"></i> Sales
                    </a>
                  </li>
                </ul>

                <p class="text-uppercase text-primary mt-4 mb-2 navMainHeading">User Management</p>
                <ul class="nav nav-pills flex-column ">
                  <li>
                    <a href="/admin/customers" class="nav-link text-dark">
                      <i class="fas fa-users"></i> Customers
                    </a>
                  </li>
                </ul>
              </div>

              <!-- Main Content -->
              <div class="col-md-10 p-4">
                <!-- Top Navbar -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                  <h2>Add Category</h2>
                  <div class="d-flex align-items-center">
                    <!-- Search Bar -->
                    <input type="text" class="form-control me-3 w-50" placeholder="Search...">

                    <!-- Admin Profile -->
                    <div class="dropdown">
                      <button class="btn btn-light dropdown-toggle" type="button" id="adminDropdown"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        <%= username %>
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                        <li><a class="dropdown-item" href="/admin/logout">Logout</a></li>
                      </ul>
                    </div>
                  </div>
                </div>

                <!-- Breadcrumb and Actions -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                      <li class="breadcrumb-item"><a href="/admin/dashboard"
                          class="breadcrumb-item-style-atag">Dashboard</a></li>
                      <li class="breadcrumb-item active" aria-current="page"><a href="/admin/product"
                          class="breadcrumb-item-style-atag">Product List</a></li>
                      <li class="breadcrumb-item active" aria-current="page"><a href="/admin/category"
                          class="breadcrumb-item-style-atag">Category</a></li>
                      <li class="breadcrumb-item active" aria-current="page">Add Category</li>
                    </ol>
                  </nav>
                </div>
                <div class="form-container bg-white p-4 rounded shadow-sm">
                  <form action="/admin/addCategory" method="post">
                    <div class="row">
                      <!-- Thumbnail Section -->
                      <!-- General Information -->
                      <div class="col-md-8">
                        <div class="mb-3">
                          <label for="categoryName" class="form-label">Category Name</label>
                          <input name="name" type="text" value="iPhone " class="form-control" id="categoryName"
                            placeholder="Type category name here...">
                          <div class="error-message"></div>
                        </div>
                        <div class="mb-3">
                          <label for="description" class="form-label">Description</label>
                          <textarea name="description" class="form-control" id="description" rows="4"
                            placeholder="Type category description here..."></textarea>
                          <div class="error-message"></div>
                        </div>
                      </div>
                    </div>
                    <!-- Status Dropdown -->
                    <div class="mb-4">
                      <label for="status" class="form-label">Product Status</label>
                      <select class="form-select w-25" id="status" name="status">
                        <option disabled selected value=""></option>
                        <option value="true">List</option>
                        <option value="false">UnLisdt</option>
                      </select>
                      <div class="error-message"></div>
                    </div>
                    <!-- Action Buttons -->
                    <div class="action-buttons">
                      <button type="button" class="btn btn-secondary" id="cancelbtn">Cancel</button>
                      <button type="submit" class="btn btn-primary">Add Category</button>
                    </div>
                  </form>
                </div>



              </div>
            </div>
          </div>

          <!-- Bootstrap JS -->
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
          <script src="/admin/addCatogary/script.js"></script>
          <%- include('partials/footer.ejs') -%>