<%- include('partials/header.ejs') -%>
  <link rel="stylesheet" href="/admin/addCustomer/style.css">
  </head>

  <body>
    <% if(message){ %>
      <div id="alertBox" class="alert alert-success" role="alert">
        <%= message %>
      </div>
      <% }%>
        <div class="container-fluid">
          <div class="row">
            <!-- Sidebar -->
            <div class="d-flex flex-column p-3 text-white vh-100 " style="width: 250px;">
              <ul class="nav nav-pills flex-column ">
                <li>
                  <a href="/admin" class="nav-link text-dark">
                    <img class="idealLogo" src="/image/icons/idealLogo.svg" alt="iDeal Log">
                  </a>
                </li>
              </ul>
              <p class="text-uppercase text-primary navMainHeading mt-3">Menu</p>
              <ul class="nav nav-pills flex-column ">
                <li class="nav-item">
                  <a href="/admin" class="nav-link text-dark">
                    <i class="fas fa-th-large"></i> Dashboard
                  </a>
                </li>
                <li>
                  <a href="/admin/product" class="nav-link text-dark">
                    <i class="fas fa-box"></i> Products
                  </a>
                </li>
                <li>
                  <a href="/admin/orders" class="nav-link text-dark">
                    <i class="fas fa-shopping-cart"></i> Orders
                  </a>
                </li>
                <li>
                  <a href="/admin/return" class="nav-link text-dark">
                    <i class="fas fa-undo"></i> Returns
                  </a>
                </li>
                <li>
                  <a href="/admin/coupon" class="nav-link text-dark">
                    <i class="fas fa-ticket-alt"></i> Coupon
                  </a>
                </li>
                <li>
                  <a href="/admin/banner" class="nav-link text-dark">
                    <i class="fas fa-image"></i> Banner
                  </a>
                </li>
                <li>
                  <a href="/admin/transaction" class="nav-link text-dark">
                    <i class="fas fa-exchange-alt"></i> Transaction
                  </a>
                </li>
                <li>
                  <a href="/admin/offer" class="nav-link text-dark">
                    <i class="fas fa-tag"></i> Offer
                  </a>
                </li>
                <li>
                  <a href="/admin/sales" class="nav-link text-dark">
                    <i class="fas fa-money-bill-wave"></i> Sales
                  </a>
                </li>
              </ul>

              <p class="text-uppercase text-primary mt-4 mb-2 navMainHeading">User Management</p>
              <ul class="nav nav-pills flex-column ">
                <li>
                  <a href="/admin/customers" class="nav-link active">
                    <i class="fas fa-users"></i> Customers
                  </a>
                </li>
              </ul>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 p-4">
              <!-- Top Navbar -->
              <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Add Customer</h2>
                <div class="d-flex align-items-center">
                  <!-- Search Bar -->
                  <input type="text" class="form-control me-3 w-50" placeholder="Search...">

                  <!-- Admin Profile -->
                  <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" id="adminDropdown"
                      data-bs-toggle="dropdown" aria-expanded="false">
                      <%= username %>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                      <li><a class="dropdown-item" href="/admin/logout">Logout</a></li>
                    </ul>
                  </div>
                </div>
              </div>

              <!-- Breadcrumb and Actions -->
              <div class="d-flex justify-content-between align-items-center mb-3">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/admin"
                        class="breadcrumb-item-style-atag">Dashboard</a></li>
                    <li class="breadcrumb-item" aria-current="page"><a href="/admin/customers"
                        class="breadcrumb-item-style-atag">Customers List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Add Customers</li>
                  </ol>
                </nav>
              </div>

              <div class="form-container">
                <form action="/admin/addCustomer" method="post" id="yourFormId">
                  <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter customer name" name="name">
                    <div class="error-message"></div>
                  </div>
                  <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter email address" name="email">
                    <div class="error-message"></div>
                  </div>
                  <div class="mb-3">
                    <label for="phone" class="form-label">Phone</label>
                    <input type="tel" class="form-control" id="phone" placeholder="Enter phone number" name="phone">
                    <div class="error-message"></div>
                  </div>
                  <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Enter Password"
                      name="password">
                    <div class="error-message"></div>
                  </div>
                  <button type="submit" class="btn btn-primary w-100" id="submitButton">Add Customer</button>
                </form>
              </div>
            </div>
          </div>
        </div>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/admin/addCustomer/script.js"></script>
        <%- include('partials/footer.ejs') -%>