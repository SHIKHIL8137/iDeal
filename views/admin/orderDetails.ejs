<%- include('partials/header.ejs') -%>
<link rel="stylesheet" href="/admin/orderDetails/style.css">
</head>
<body>
  <% if(message){ %>
    <div id="alertBox" class="alert alert-success" role="alert">
     <%= message %>
    </div>
    <% }%>
  <div class="container-fluid">
    <div class="row flex-nowrap">
      <!-- Sidebar -->
      <div class="d-flex flex-column  p-3 text-white vh-100 col-md-2" style="width: 250px;">
        <ul class="nav nav-pills flex-column ">
          <li>
            <a href="#" class="nav-link text-dark">
              <img class="idealLogo" src="/image/icons/idealLogo.svg" alt="iDeal Log">
            </a>
          </li>
        </ul>
        <p class="text-uppercase text-primary navMainHeading mt-3">Menu</p>
        <ul class="nav nav-pills flex-column ">
          <li class="nav-item">
            <a href="/admin/dashboard" class="nav-link text-dark">
              <i class="fas fa-th-large"></i> Dashboard
            </a>
          </li>
          <li>
            <a href="/admin/product" class="nav-link active">
              <i class="fas fa-box"></i> Products
            </a>
          </li>
          <li>
            <a href="/admin/order" class="nav-link text-dark">
              <i class="fas fa-shopping-cart"></i> Orders
            </a>
          </li>
          <li>
            <a href="/admin/coupon" class="nav-link text-dark">
              <i class="fas fa-ticket-alt"></i> Coupon
            </a>
          </li>
          <li>
            <a href="/admin/banner" class="nav-link text-dark">
              <i class="fas fa-image"></i> Banner
            </a>
          </li>
          <li>
            <a href="/admin/transaction" class="nav-link text-dark">
              <i class="fas fa-exchange-alt"></i> Transaction
            </a>
          </li>
        </ul>
      
        <p class="text-uppercase text-primary mt-4 mb-2 navMainHeading">User Management</p>
        <ul class="nav nav-pills flex-column ">
          <li>
            <a href="/admin/manageAdmin" class="nav-link text-dark">
              <i class="fas fa-user-cog"></i> Manage Admins
            </a>
          </li>
          <li>
            <a href="/admin/customers" class="nav-link text-dark">
              <i class="fas fa-users"></i> Customers
            </a>
          </li>
        </ul>
      </div>

      <!-- Main Content -->
      <div class="col-md-10 p-4">
        <!-- Top Navbar -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2>Order Details</h2>
          <div class="d-flex align-items-center">
            <!-- Search Bar -->
            <input type="text" class="form-control me-3 w-50" placeholder="Search...">
            
            <!-- Admin Profile -->
            <div class="dropdown">
              <button class="btn btn-light dropdown-toggle" type="button" id="adminDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <%= username %>
              </button>
              <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                <li><a class="dropdown-item" href="/admin/logout">Logout</a></li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Breadcrumb and Actions -->
        <div class="d-flex justify-content-between align-items-center mb-3">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
              <li class="breadcrumb-item"><a href="/admin/dashboard" class="breadcrumb-item-style-atag">Dashboard</a></li>
              <li class="breadcrumb-item"><a href="/admin/dashboard" class="breadcrumb-item-style-atag">Order</a></li>
              <li class="breadcrumb-item active" aria-current="page">Order Details</li>
            </ol>
          </nav>
        </div>

        <div class="row g-3">
          <div class="col-lg-6">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Order #302011</h5>
                <span class="badge bg-warning text-dark">Processing</span>
                <ul class="list-unstyled mt-3">
                  <li><strong>Added:</strong> 08 Nov 2024</li>
                  <li><strong>Payment Method:</strong> Visa</li>
                  <li><strong>Shipping Method:</strong> Flat Shipping</li>
                </ul>
              </div>
            </div>
          </div>
          <!-- Customer Details -->
          <div class="col-lg-6">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Customer</h5>
                <ul class="list-unstyled mt-3">
                  <li><strong>Name:</strong> Josh Adam</li>
                  <li><strong>Email:</strong> joshadam@mail.com</li>
                  <li><strong>Phone:</strong> 909 427 2910</li>
                </ul>
              </div>
            </div>
          </div>
          <!-- Address Details -->
          <div class="col-lg-6">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Address</h5>
                <p><strong>Billing Address:</strong> <br> 1833 Bel Meadow Drive, Fontana, California 92335, USA</p>
                <p><strong>Shipping Address:</strong> <br> 1833 Bel Meadow Drive, Fontana, California 92335, USA</p>
              </div>
            </div>
          </div>
          <!-- Order List -->
          <div class="col-lg-12">
            <div class="card">
              <div class="card-header">
                Order List
              </div>
              <div class="card-body">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Product</th>
                      <th>SKU</th>
                      <th>Quantity</th>
                      <th>Price</th>
                      <th>Total</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>iPhone 13 Pro (Black)</td>
                      <td>302011</td>
                      <td>1 pcs</td>
                      <td>$121.00</td>
                      <td>$121.00</td>
                    </tr>
                    <tr>
                      <td>iPhone SE (Black)</td>
                      <td>302011</td>
                      <td>1 pcs</td>
                      <td>$590.00</td>
                      <td>$590.00</td>
                    </tr>
                  </tbody>
                  <tfoot>
                    <tr>
                      <td colspan="4" class="text-end"><strong>Subtotal:</strong></td>
                      <td>$711.00</td>
                    </tr>
                    <tr>
                      <td colspan="4" class="text-end"><strong>VAT (0%):</strong></td>
                      <td>$0.00</td>
                    </tr>
                    <tr>
                      <td colspan="4" class="text-end"><strong>Shipping Rate:</strong></td>
                      <td>$10.00</td>
                    </tr>
                    <tr>
                      <td colspan="4" class="text-end"><strong>Total:</strong></td>
                      <td>$721.00</td>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script type="application/json" id="userData"><%- JSON.stringify(products) %></script>
  <script src="/admin/orderDetails/script.js"></script>
  <%- include('partials/footer.ejs') -%>


