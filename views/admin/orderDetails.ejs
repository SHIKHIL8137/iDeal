<%- include('partials/header.ejs') -%>
<link rel="stylesheet" href="/admin/orderDetails/style.css">
</head>
<body>
  <% if (message) { %>
    <div id="alertBox" class="alert alert-success" role="alert">
      <%= message %>
    </div>
  <% } %>
  <div class="container-fluid">
    <div class="row flex-nowrap">
      <!-- Sidebar -->
      <div class="d-flex flex-column p-3 text-white vh-100 col-md-2" style="width: 250px;">
        <ul class="nav nav-pills flex-column">
          <li>
            <a href="#" class="nav-link text-dark">
              <img class="idealLogo" src="/image/icons/idealLogo.svg" alt="iDeal Logo">
            </a>
          </li>
        </ul>
        <p class="text-uppercase text-primary navMainHeading mt-3">Menu</p>
        <ul class="nav nav-pills flex-column">
          <li class="nav-item">
            <a href="/admin/dashboard" class="nav-link text-dark">
              <i class="fas fa-th-large"></i> Dashboard
            </a>
          </li>
          <li>
            <a href="/admin/product" class="nav-link active">
              <i class="fas fa-box"></i> Products
            </a>
          </li>
          <li>
            <a href="/admin/orders" class="nav-link text-dark">
              <i class="fas fa-shopping-cart"></i> Orders
            </a>
          </li>
          <li>
            <a href="/admin/coupon" class="nav-link text-dark">
              <i class="fas fa-ticket-alt"></i> Coupon
            </a>
          </li>
          <li>
            <a href="/admin/banner" class="nav-link text-dark">
              <i class="fas fa-image"></i> Banner
            </a>
          </li>
          <li>
            <a href="/admin/transaction" class="nav-link text-dark">
              <i class="fas fa-exchange-alt"></i> Transaction
            </a>
          </li>
        </ul>
      
        <p class="text-uppercase text-primary mt-4 mb-2 navMainHeading">User Management</p>
        <ul class="nav nav-pills flex-column">
          <li>
            <a href="/admin/manageAdmin" class="nav-link text-dark">
              <i class="fas fa-user-cog"></i> Manage Admins
            </a>
          </li>
          <li>
            <a href="/admin/customers" class="nav-link text-dark">
              <i class="fas fa-users"></i> Customers
            </a>
          </li>
        </ul>
      </div>

      <!-- Main Content -->
      <div class="col-md-10 p-4">
        <!-- Top Navbar -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2>Order Details</h2>
          <div class="d-flex align-items-center">
            <!-- Search Bar -->

            <div class="dropdown">
              <button class="btn btn-light dropdown-toggle" type="button" id="adminDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <%= username %>
              </button>
              <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                <li><a class="dropdown-item" href="/admin/logout">Logout</a></li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Breadcrumb and Actions -->
        <div class="d-flex justify-content-between align-items-center mb-3">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
              <li class="breadcrumb-item"><a href="/admin/dashboard" class="breadcrumb-item-style-atag">Dashboard</a></li>
              <li class="breadcrumb-item"><a href="/admin/order" class="breadcrumb-item-style-atag">Orders</a></li>
              <li class="breadcrumb-item active" aria-current="page">Order Details</li>
            </ol>
          </nav>
        </div>

        <div class="row g-3">
          <div class="col-lg-6">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Order <%= order.orderId %></h5>
                <span class="badge bg-warning text-dark"><%= order.status %></span>
                <ul class="list-unstyled mt-3">
                  <li><strong>Added:</strong> <%= order.orderDate.toLocaleDateString() %></li>
                  <li><strong>Payment Method:</strong> <%= order.paymentMethod %></li>
                </ul>
              </div>
            </div>
          </div>
          
          <!-- Customer Details -->
          <div class="col-lg-6">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Customer</h5>
                <ul class="list-unstyled mt-3">
                  <li><strong>Name:</strong> <%= order.userId.firstName %> <%= order.userId.lastName %></li>
                  <li><strong>Email:</strong> <%= order.userId.email %></li>
                  <li><strong>Phone:</strong> <%= order.userId.phone %></li>
                </ul>
              </div>
            </div>
          </div>

          <!-- Address Details -->
          <div class="col-lg-6">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Address</h5>
                <p><strong>Billing Address:</strong> <br> <%= order.billingAddress.houseName %>, <%= order.billingAddress.city %>, <%= order.billingAddress.state %>, <%= order.billingAddress.zipCode %>, <%= order.billingAddress.country %></p>
                <p><strong>Shipping Address:</strong> <br> <%= order.deliveryAddress.houseName %>, <%= order.deliveryAddress.city %>, <%= order.deliveryAddress.state %>, <%= order.deliveryAddress.zipCode %>, <%= order.deliveryAddress.country %></p>
              </div>
            </div>
          </div>

          <!-- Order List -->
          <div class="col-lg-12">
            <div class="card">
              <div class="card-header">
                Order List
              </div>
              <div class="card-body">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Product</th>
                      <th>Product ID</th>
                      <th>Quantity</th>
                      <th>Price</th>
                      <th>Total</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% order.products.forEach(function(product) { %>
                      <tr>
                        <td><%= product.productId.name %></td>
                        <td><%= product.productId._id %></td>
                        <td><%= product.quantity %> pcs</td>
                        <td>₹<%= product.price.toFixed(2) %></td>
                        <td>₹<%= product.total.toFixed(2) %></td> 
                      </tr>
                    <% }); %>
                  </tbody>
                  <tfoot>
                    <tr>
                      <td colspan="4" class="text-end"><strong>Subtotal:</strong></td>
                      <td>₹<%= order.subtotal %></td>
                    </tr>
                   
                    <tr>
                      <td colspan="4" class="text-end"><strong>Total:</strong></td>
                      <td>₹<%= order.totalAmount %></td>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/admin/orderDetails/script.js"></script>
  <%- include('partials/footer.ejs') -%>
