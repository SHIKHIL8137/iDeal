<%- include('partials/header.ejs') -%>
  <link rel="stylesheet" href="/admin/addProduct/style.css">
  </head>

  <body>
    <% if(message){ %>
      <div id="alertBox" class="alert alert-success" role="alert">
        <%= message %>
      </div>
      <% } %>
        <div class="container-fluid">
          <div class="row">
            <!-- Sidebar -->
            <div class="d-flex flex-column p-3 text-white vh-100 " style="width: 250px;">
              <ul class="nav nav-pills flex-column ">
                <li>
                  <a href="#" class="nav-link text-dark">
                    <img class="idealLogo" src="/image/icons/idealLogo.svg" alt="iDeal Log">
                  </a>
                </li>
              </ul>
              <p class="text-uppercase text-primary navMainHeading mt-3">Menu</p>
              <ul class="nav nav-pills flex-column ">
                <li class="nav-item">
                  <a href="/admin/dashboard" class="nav-link text-dark">
                    <i class="fas fa-th-large"></i> Dashboard
                  </a>
                </li>
                <li>
                  <a href="/admin/product" class="nav-link active">
                    <i class="fas fa-box"></i> Products
                  </a>
                </li>
                <li>
                  <a href="/admin/orders" class="nav-link text-dark">
                    <i class="fas fa-shopping-cart"></i> Orders
                  </a>
                </li>
                <li>
                  <a href="/admin/return"  class="nav-link text-dark">
                    <i class="fas fa-undo"></i> Returns
                  </a>
                </li>
                <li>
                  <a href="/admin/coupon" class="nav-link text-dark">
                    <i class="fas fa-ticket-alt"></i> Coupon
                  </a>
                </li>
                <li>
                  <a href="/admin/banner" class="nav-link text-dark">
                    <i class="fas fa-image"></i> Banner
                  </a>
                </li>
                <li>
                  <a href="/admin/transaction" class="nav-link text-dark">
                    <i class="fas fa-exchange-alt"></i> Transaction
                  </a>
                </li>
                <li>
                  <a href="/admin/offer" class="nav-link text-dark">
                    <i class="fas fa-tag"></i> Offer
                  </a>
                </li>
                <li>
                  <a href="/admin/sales"  class="nav-link text-dark">
                    <i class="fas fa-money-bill-wave"></i> Sales
                  </a>
                </li>
              </ul>

              <p class="text-uppercase text-primary mt-4 mb-2 navMainHeading">User Management</p>
              <ul class="nav nav-pills flex-column ">
                <li>
                  <a href="/admin/adminManage" class="nav-link text-dark">
                    <i class="fas fa-user-cog"></i> Manage Admins
                  </a>
                </li>
                <li>
                  <a href="/admin/customers" class="nav-link text-dark">
                    <i class="fas fa-users"></i> Customers
                  </a>
                </li>
              </ul>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 p-4">
              <!-- Top Navbar -->
              <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Add Product</h2>
                <div class="d-flex align-items-center">

                  <!-- Admin Profile -->
                  <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" id="adminDropdown"
                      data-bs-toggle="dropdown" aria-expanded="false">
                      <%= username %>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                      <li><a class="dropdown-item" href="/admin/logout">Logout</a></li>
                    </ul>
                  </div>
                </div>
              </div>

              <div class="d-flex justify-content-between align-items-center mb-3">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/admin/dashboard"
                        class="breadcrumb-item-style-atag">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><a href="/admin/product"
                        class="breadcrumb-item-style-atag">Product List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Add Product</li>
                  </ol>
                </nav>
              </div>
              <!-- Breadcrumb and Actions -->
              <div class="container my-5">
                <form action="/admin/addProduct" method="post" enctype="multipart/form-data">
                  <div class="row">
                    <div class="col-lg-9">
                      <div class="card mb-4">
                        <h5>General Information</h5>
                        <div class="mb-3">
                          <label for="productName" class="form-label">Product Name</label>
                          <input type="text" class="form-control" id="productName"
                            placeholder="Type product name here..." name="name" value="iPhone ">
                          <div class="error-message"></div>
                        </div>
                        <div class="mb-3">
                          <label for="productDescription" class="form-label">Description</label>
                          <textarea class="form-control" id="productDescription" rows="3"
                            placeholder="Type product description here..." name="description"></textarea>
                          <div class="error-message"></div>
                        </div>
                      </div>
                      <!-- image uploding field -->
                      <div class="card mb-2">
                        <h4>Media</h4>
                        <div class="border row">
                          <div id="addedImagesContainer" class="thumbnails-container"></div>
                        </div>
                        <div class="row">
                          <div class="card-body align-items-center" style="margin-bottom: 20px;">
                            <img src="" alt="" id="imgView1">
                            <input class="form-control" type="file" name="images" id="input1"
                              accept="image/png, image/jpeg, image/jpg"
                              onchange="viewImage1(event);viewImage(event, 1)">
                            <div class="error-message"></div>
                          </div>
                          <div class="image-cropper d-flex align-items-center"
                            style="display:none; width: 100px; height: 150px; margin-bottom: 20px;">
                            <img src="" id="croppedImg1" alt="" style="display: none;">
                            <button type="button" id="saveButton1" class="btn btn-primary">Save</button>
                          </div>
                        </div>

                        <div class="row">
                          <div class="card-body align-items-center" style="margin-bottom: 20px;">
                            <img src="" alt="" id="imgView2">


                            <input class="form-control" type="file" name="images" id="input2"
                              accept="image/png, image/jpeg, image/jpg"
                              onchange="viewImage2(event);viewImage(event, 2)">
                            <div class="error-message"></div>
                          </div>
                          <div class="image-cropper d-flex align-items-center"
                            style="display:none; width: 300px; height: 200px; margin-bottom: 20px;">
                            <img src="" id="croppedImg2" alt="" style="display: none;">
                            <button type="button" id="saveButton2" class="btn btn-primary">Save</button>
                          </div>
                        </div>

                        <div class="row">
                          <div class="card-body align-items-center" style="margin-bottom: 20px;">
                            <img src="" alt="" id="imgView3">


                            <input class="form-control" type="file" name="images" id="input3"
                              accept="image/png, image/jpeg, image/jpg"
                              onchange="viewImage3(event);viewImage(event, 3)">
                            <div class="error-message"></div>
                          </div>
                          <div class="image-cropper d-flex align-items-center"
                            style="display:none; width: 300px; height: 200px; margin-bottom: 20px;">
                            <img src="" id="croppedImg3" alt="" style="display: none;">
                            <button type="button" id="saveButton3" class="btn btn-primary">Save</button>
                          </div>
                        </div>

                        <div class="row">
                          <div class="card-body align-items-center" style="margin-bottom: 20px;">
                            <img src="" alt="" id="imgView4">



                            <input class="form-control" type="file" name="images" id="input4"
                              accept="image/png, image/jpeg, image/jpg"
                              onchange="viewImage4(event);viewImage(event, 4)">
                            <div class="error-message"></div>
                          </div>
                          <div class="image-cropper d-flex align-items-center"
                            style="display:none; width: 300px; height: 200px; margin-bottom: 20px;">
                            <img src="" id="croppedImg4" alt="" style="display: none;">
                            <button type="button" id="saveButton4" class="btn btn-primary">Save</button>
                          </div>
                        </div>

                      </div>



                      <div class="card mb-4">
                        <h5>Pricing</h5>
                        <div class="mb-3">
                          <label for="basePrice" class="form-label">Base Price</label>
                          <input type="number" class="form-control" id="basePrice" placeholder="Type base price here..."
                            name="price">
                          <div class="error-message"></div>
                        </div>
                        <div class="mb-3">
                          <label for="discountPercentage" class="form-label">Discount Percentage (%)</label>
                          <input name="discount" type="number" class="form-control" id="discountPercentage"
                            placeholder="Type discount percentage...">
                          <div class="error-message"></div>
                        </div>
                        <div class="row">
                          <div class="col-md-4">
                            <label for="productStorage" class="form-label">Storage</label>
                            <select class="form-select" id="storageStatus" name="storage">
                              <option value="" disabled selected></option>
                              <option value="64">64 GB</option>
                              <option value="128">128 GB</option>
                              <option value="256">256 GB</option>
                              <option value="512">512 GB</option>
                              <option value="10000">1 TB</option>
                            </select>
                            <div class="error-message"></div>
                          </div>
                          <div class="col-md-4">
                            <label for="productColor" class="form-label">Color</label>
                            <select class="form-select" id="colorStatus" name="color">
                              <option value="" disabled selected></option>
                              <option value="pink">Pink</option>
                              <option value="yellow">Yellow</option>
                              <option value="green">Green</option>
                              <option value="blue">Blue</option>
                              <option value="black">Black</option>
                              <option value="white">White</option>
                              <option value="titanium">Titanium</option>
                              <option value="purple">Purple</option>
                              <option value="midnight">Midnight</option>
                              <option value="starlight">Starlight</option>
                              <option value="red">Red (Product Red)</option>
                              <option value="gold">Gold</option>
                              <option value="spaceGray">Space Gray</option>
                              <option value="jetBlack">Jet Black</option>
                              <option value="alpineGreen">Alpine Green</option>
                              <option value="spaceBlue">Space Blue</option>
                              <option value="cosmicSilver">Cosmic Silver</option>
                              <option value="starlightGold">Starlight Gold</option>
                            </select>
                            <div class="error-message"></div>
                          </div>
                          <div class="col-md-4">
                            <label for="productQuantity" class="form-label">Quantity</label>
                            <input type="number" class="form-control" id="productQuantity" name="quantity">
                            <div class="error-message"></div>
                          </div>
                        </div>
                      </div>
                    </div>

                    <!-- Sidebar for Category and Status -->
                    <div class="col-lg-3">
                      <div class="card mb-4">
                        <div class="mb-3">
                          <label for="productCategory" class="form-label">Category</label>
                          <select class="form-select" name="category" id="productCategory">
                            <option value="" disabled selected></option>
                            <% category.forEach((val, ind)=> { %>
                              <option value="<%= val.name %>">
                                <%= val.name %> Series
                              </option>
                              <% }); %>
                          </select>
                          <div class="error-message"></div>

                        </div>
                        <div class="mb-3">
                          <label for="productStatus" class="form-label">condition</label>
                          <select class="form-select" id="productStatus" name="conditon">
                            <option value="" disabled selected></option>
                            <option value="super">Super</option>
                            <option value="good">Good</option>
                            <option value="fair">Fair</option>
                          </select>
                          <div class="error-message"></div>
                        </div>
                        <div class="mb-3">
                          <label for="productStatus" class="form-label">Conectivity</label>
                          <select class="form-select" id="productStatus" name="connectivity">
                            <option value="" disabled selected></option>
                            <option value="4G">4G</option>
                            <option value="5G">5G</option>
                          </select required>
                          <div class="error-message"></div>
                        </div>
                      </div>
                      <div class="d-flex justify-content-between">
                        <button id="cancelbtn" class="btn btn-secondary w-45">Cancel</button>
                        <button class="btn btn-primary w-45" type="submit" id="submitBtn">Save Product</button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>


            </div>
          </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        <script src="/admin/addProduct/script.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/cropperjs/dist/cropper.min.js"></script>
        <%- include('partials/footer.ejs') -%>