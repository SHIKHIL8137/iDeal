<%- include('partials/header.ejs') -%>
  <link rel="stylesheet" href="/user/login/stlye.css">
</head>
<body>
  <% if (message && errBoolean) { %>
    <div id="alertBox" class="alert alert-success" role="alert">
      <%= message %>
    </div>
  <% } else if (message && !errBoolean) { %>
    <div id="alertBox" class="alert alert-danger" role="alert">
      <%= message %>
    </div>
  <% } %>
  <div class="row main">
    <div class="left col-md-6 p-0 d-flex justify-content-center">
      <img class="iDealLogo mt-4" src="/image/icons/LogoBlack.png" alt="iDealLogo">
    </div>
    <div class="right col-md-6 p-0">
      <div class="leftForm mx-auto ">
        <h2 class="fs-1 fw-bold">Sign In</h2>
        <p class="dontxt mt-3">Don't have an account yet? <a href="http://localhost:3000/user/signup/">Sign Up</a></p>
        <p id="errorMsg"></p>
        <form action="/user/loginVelidation" method="post" id="loginForm">
          <div class="mb-3 mt-4 inputField">
            <input type="email" name="email" class="form-control border-0 inpField" id="email" placeholder="email">
          </div>
          <div class="mb-4 mt-4">
            <div class="input-group">
              <input type="password" name="password" class="form-control border-0 inpField" id="password" placeholder="password">
              <button class="btn border-0" type="button" id="togglePassword">
                <i class="fa fa-eye" aria-hidden="true"></i>
              </button>
            </div>
          </div>
          <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
            <a class="forgTxt" href="#" data-bs-toggle="modal" data-bs-target="#signupModal">How to sign up?</a>
            <a class="forgTxt" href="http://localhost:3000/user/forgotpassword/">Forgot password?</a>
          </div>
          <button type="submit" class="btn btn-dark w-100">Sign In</button>
          <div class="text-center my-3">OR</div>
          <button type="button" class="btn btn-light w-100">
            <img src="https://www.google.com/favicon.ico" alt="Google logo" width="20" class="me-2"><a class="googleSignUpIn" href="/user/auth/google">Continue with Google</a>
          </button>
        </form>
      </div>
    </div>
  </div>


  <div class="modal fade" id="signupModal" tabindex="-1" aria-labelledby="signupModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="signupModalLabel">How to Sign Up</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <!-- Video Embed -->
          <div class="ratio ratio-16x9">
            <iframe 
              src="/video/VN20241127_200342.mp4" 
              title="Sign Up Tutorial" 
              allowfullscreen>
            </iframe>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="/user/login/script.js"></script>
  <%- include('partials/footer.ejs') -%>