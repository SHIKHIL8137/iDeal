</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="#"><img class="logoImag" src="/image/icons/LogoBlack.png" alt="iDeal Logo"></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link text-white" href="/user/home">Home</a></li>
          <li class="nav-item"><a class="nav-link text-white" href="/user/shop">Shop</a></li>
          <li class="nav-item"><a class="nav-link text-white" href="#">About Us</a></li>
          <li class="nav-item"><a class="nav-link text-white" href="#">Contact Us</a></li>
        </ul>
      </div>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/user/userProfile"><img src="/image/icons/user-circle.svg" alt=""></a></li>
          <li class="nav-item"><a class="nav-link" href="/user/cart"><img src="/image/icons/shopping bag.svg" alt=""></a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container confirmation-container text-center">
    <h1 class="mb-4 text-success">Thank You for Your Order!</h1>
    <p class="lead">Your order has been placed successfully.</p>
    <p>We will notify you when your items have shipped.</p>

    <hr class="my-4">

    <!-- Order Details -->
    <h4 class="mb-3">Order Summary</h4>
    <div class="order-summary text-start">
      <p><strong>Order ID:</strong> <%= orderDetails.orderId %></p>
      <p><strong>Date:</strong> <%= new Date(orderDetails.orderDate).toLocaleDateString() %></p>
      <p><strong>Shipping Address:</strong></p>
      <p>
        <%= orderDetails.deliveryAddress.fname %> <%= orderDetails.deliveryAddress.lname %><br>
        <%= orderDetails.deliveryAddress.houseName %><br>
        <%= orderDetails.deliveryAddress.city %>, <%= orderDetails.deliveryAddress.state %> <%= orderDetails.deliveryAddress.zipCode %><br>
        <%= orderDetails.deliveryAddress.country %><br>
        <%= orderDetails.deliveryAddress.phone %><br>
        <%= orderDetails.deliveryAddress.email %>
      </p>
    </div>

    <hr class="my-4">

    <!-- Items -->
    <h4 class="mb-3">Items Ordered</h4>
    <table class="table text-center">
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% orderDetails.products.forEach(product => { %>
          <tr>
            <td><%= product.productName %></td> 
            <td><%= product.quantity %></td>
            <td>₹<%= product.price.toLocaleString('en-IN') %></td>
          </tr>
        <% }) %>
      </tbody>
      <tfoot>
        <tr>
          <th>Subtotal</th>
          <th></th>
          <th>₹<%= orderDetails.subtotal.toLocaleString('en-IN') %></th>   
        </tr>
        <tr>
          <th>Discount</th>
          <th></th>
          <th class="text-success"><%= orderDetails.discount.toLocaleString('en-IN')%></th> 
        </tr>
        <tr>
          <th>Total</th>
          <th></th> 
          <th>₹<%= orderDetails.totalAmount.toLocaleString('en-IN') %> /-</th>
        </tr>
      </tfoot>
    </table>

    <!-- Footer Buttons -->
    <div>
      <div id="countdown">
        <div id="timer-wrapper">
          <span id="timer">20</span>
        </div>
        <p>This page will expire in <span id="timer-text">20</span> seconds.</p>
      </div>     
      <a href="/user/shop" class="btn btn-primary me-2">Continue Shopping</a> 
      <input type="hidden" id="orderId" value="<%= orderDetails._id %>">
    </div>
</div>



  <div class="footer">
    <div class="container">
      <div class="row align-items-center">
        <!-- Logo and Tagline -->
        <div class="col-md-4 text-center text-md-start">
          <div class="footer-logo">
            <img src="/image/icons/LogoBlack.png" alt="iDeal Logo">
            <span>| <span class="footerSpan"> Used iPhone Store</span></span>
          </div>
        </div>
        
        <!-- Navigation Links -->
        <div class="col-md-4 text-center">
          <a href="/user/home">Home</a>
          <a href="/user/shop">Shop</a>
          <a href="#">About Us</a>
          <a href="#">Contact Us</a>
        </div>
        
        <!-- Social Media Icons -->
        <div class="col-md-4 text-center text-md-end social-icons pt-3">
          <a href="#"><img src="/image/icons/instagram.svg" alt=""></a>
          <a href="#"><img src="/image/icons/facebook.svg" alt=""></a>
          <a href="#"><img src="/image/icons/youtube.svg" alt=""></a>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col text-center text-md-start">
          <small class="footerSpan">Copyright © 2023 iDeal. All rights reserved.</small>
        </div>
        <div class="col text-center text-md-end">
          <a href="#" class="footerSpan">Privacy Policy</a>
          <a href="#" class="footerSpan">Terms of Use</a>
        </div>
      </div>
    </div>
  </div>

