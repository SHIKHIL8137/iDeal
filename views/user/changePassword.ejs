<%- include('partials/header.ejs') -%>
  <link rel="stylesheet" href="/user/changePassword/style.css">
</head>
<body>
  <div class="row main">
    <div class="left col-md-6 p-0 d-flex justify-content-center">
      <img class="iDealLogo mt-4" src="/image/icons/LogoBlack.png" alt="iDealLogo">
    </div>
    <div class="right col-md-6 p-0">
      <div class="leftForm mx-auto ">
        <h2 class="fs-1 fw-bold">Sign In</h2>
        <p class="dontxt mt-3">Enter a new password below to change your password</a></p>
        <p id="errorMsg"></p>
        <form id="formId" action="/user/changePassword/<%= token %>" method="post">
          <div class="mb-4 mt-4">
            <div class="input-group">
              <input type="password" class="form-control border-0 inpField" id="password" placeholder="password" name="password">
              <button class="btn border-0" type="button" id="togglePassword">
                <i class="fa fa-eye" aria-hidden="true"></i>
              </button>
            </div>
          </div>
          <div class="mb-4 mt-4">
            <div class="input-group">
              <input type="password" class="form-control border-0 inpField" id="conformPassword" placeholder="conform password" name="cPassowrd">
              <button class="btn border-0" type="button" id="toggleCPassword">
                <i class="fa fa-eye" aria-hidden="true"></i>
              </button>
            </div>
          </div>
          <button type="submit" class="btn btn-dark w-100" id="submitbtn">Change password</button>
        </form>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/user/changePassword/script.js"></script>
  <%- include('partials/footer.ejs') -%>