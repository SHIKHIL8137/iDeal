            <div class="float-end">
              <button class="btn btn-outline-primary">Edit</button>
              <button class="btn btn-outline-danger ms-2">Delete</button>
            </div>
          </div>
          <button class="btn btn-primary mt-3">Add address</button>
        </div>
        
      </div>
      <div class="mb-5">
        <div data-bs-toggle="collapse" href="#billingAddress" role="button" aria-expanded="false"
          aria-controls="billingAddress">
          <h4>Billing Information</h4>
        </div>
        <div class="collapse" id="billingAddress">
        <div class="row g-3">
          <div class="col-md-6">
            <input type="text" class="form-control" placeholder="First Name" required>
          </div>
          <div class="col-md-6">
            <input type="text" class="form-control" placeholder="Last Name" required>
          </div>
          <div class="col-md-12">
            <input type="text" class="form-control" placeholder="Company Name (Optional)">
          </div>
          <div class="col-md-12">
            <textarea class="form-control" rows="2" placeholder="Address"></textarea>
          </div>
          <div class="col-md-6">
            <select class="form-select">
              <option selected disabled>Country</option>
              <option>India</option>
              <option>USA</option>
            </select>
          </div>
          <div class="col-md-6">
            <select class="form-select">
              <option selected disabled>Region/State</option>
              <option>Kerala</option>
              <option>Tamil Nadu</option>
            </select>
          </div>
          <div class="col-md-6">
            <input type="text" class="form-control" placeholder="City">
          </div>
          <div class="col-md-6">
            <input type="text" class="form-control" placeholder="Zip Code">
          </div>
          <div class="col-md-6">
            <input type="email" class="form-control" placeholder="Email">
          </div>
          <div class="col-md-6">
            <input type="text" class="form-control" placeholder="Phone Number">
          </div>
          <div class="col-12">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="sameAsDelivery">
              <label class="form-check-label" for="sameAsDelivery">Same as delivery address</label>
            </div>
          </div>
        </div>
        </div>
      </div>
      <div class="mb-5">
        <div data-bs-toggle="collapse" href="#payment" role="button" aria-expanded="false"
          aria-controls="payment">
          <h4>Payment Option</h4>
        </div>
        <div class="collapse" id="payment">
        <div class="d-flex align-items-center justify-content-around py-3 ">
          <!-- Cash on Delivery -->
          <div class="text-center">
            <img src="https://img.icons8.com/ios-filled/50/cash-on-delivery.png" alt="Cash on Delivery" width="40" class="logoCOD">
            <p class="mb-0 mt-2">Cash on Delivery</p>
            <input class="form-check-input mt-2" type="radio" name="payment" id="cod" checked>
          </div>
          <!-- Divider -->
          <div class="border-start mx-4" style="height: 50px;"></div>
          <!-- Razorpay -->
          <div class="text-center">
            <img src="/image/icons/razorpay-icon.png" alt="Razorpay" width="40" class="logoCOD">
            <p class="mb-0 mt-2">Razorpay</p>
            <input class="form-check-input mt-2" type="radio" name="payment" id="razorpay">
          </div>
          <!-- Divider -->
          <div class="border-start mx-4" style="height: 50px;"></div>
          <!-- My Wallet -->
          <div class="text-center">
            <img src="https://img.icons8.com/material-outlined/50/wallet.png" alt="My Wallet" width="40" class="logoCOD">
            <p class="mb-0 mt-2">My Wallet</p>
            <input class="form-check-input mt-2" type="radio" name="payment" id="wallet">
          </div>
        </div>
      </div>
      </div>
      
    </div>
    <div class="col-md-4">
