<div class="container">
  <div class="row chechoutRow">
    <div class="col-md-8">
      <div class="mb-5 ">
        <div data-bs-toggle="collapse" href="#deliveryAddress" role="button" aria-expanded="false"
          aria-controls="deliveryAddress">
          <h4>Delivery Address</h4>
        </div>
        <div class="collapse" id="deliveryAddress">
        </div>
        
      </div>
      <div class="mb-5">
        <div data-bs-toggle="collapse" href="#billingAddress" role="button" aria-expanded="false"
          aria-controls="billingAddress">
          <h4>Billing Information</h4>
        </div>
        <div class="collapse" id="billingAddress">
          <div class="row g-3">
            <div class="col-md-6">
              <input type="text" class="form-control input-field" id="billingFirstName" placeholder="First Name">
            </div>
            <div class="col-md-6">
              <input type="text" class="form-control input-field" id="billingLastName" placeholder="Last Name">
            </div>
            <div class="col-md-12">
              <input type="text" class="form-control input-field" id="billingCompany" placeholder="Company Name (Optional)">
            </div>
            <div class="col-md-12">
              <input type="text" class="form-control input-field" id="billingHouseName" placeholder="House Name">
            </div>
            <div class="col-md-6">
              <select class="form-select input-field" id="billingCountry" name="country">
                <option value="India">India</option>
              </select>
            </div>
            <div class="col-md-6">
              <input type="text" class="form-control input-field" id="billingState" placeholder="State">
            </div>
            <div class="col-md-6">
              <input type="text" class="form-control input-field" id="billingCity" placeholder="City">
            </div>
            <div class="col-md-6">
              <input type="text" class="form-control input-field" id="billingZip" placeholder="Zip Code">
            </div>
            <div class="col-md-6">
              <input type="email" class="form-control input-field" id="billingEmail" placeholder="Email">
            </div>
            <div class="col-md-6">
              <input type="text" class="form-control input-field" id="billingPhone" placeholder="Phone Number">
            </div>
            <div class="col-12">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="sameAsDelivery">
                <label class="form-check-label" for="sameAsDelivery">Same as delivery address</label>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="mb-5">
        <div data-bs-toggle="collapse" href="#payment" role="button" aria-expanded="false"
          aria-controls="payment">
          <h4>Payment Option</h4>
        </div>
        <div class="collapse" id="payment">
        <div class="d-flex align-items-center justify-content-around py-3 ">
          <!-- Cash on Delivery -->
          <div class="text-center">
            <img src="https://img.icons8.com/ios-filled/50/cash-on-delivery.png" alt="Cash on Delivery" width="40" class="logoCOD">
            <p class="mb-0 mt-2">Cash on Delivery</p>
            <input class="form-check-input mt-2" type="radio" name="payment" id="COD" checked>
          </div>
          <!-- Divider -->
          <div class="border-start mx-4" style="height: 50px;"></div>
          <!-- Razorpay -->
          <div class="text-center">
            <img src="/image/icons/razorpay-icon.png" alt="Razorpay" width="40" class="logoCOD">
            <p class="mb-0 mt-2">Razorpay</p>
            <input class="form-check-input mt-2" type="radio" name="payment" id="Online">
          </div>
          <!-- Divider -->
          <div class="border-start mx-4" style="height: 50px;"></div>
          <!-- My Wallet -->
          <div class="text-center">
            <img src="https://img.icons8.com/material-outlined/50/wallet.png" alt="My Wallet" width="40" class="logoCOD">
            <p class="mb-0 mt-2">My Wallet</p>
            <input class="form-check-input mt-2" type="radio" name="payment" id="Wallet">
          </div>
        </div>
      </div>
      </div>
      
    </div>
    <div class="col-md-4">
      <div class="cart-summary">
      </div>
    </div>
  </div>
</div>


  <div class="footer">
    <div class="container">
      <div class="row align-items-center">
