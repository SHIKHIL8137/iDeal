</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
              <a class="navbar-brand" href="#"><img class="logoImag" src="/image/icons/LogoBlack.png" alt="iDeal Logo"></a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                  <li class="nav-item"><a class="nav-link text-white" href="#">Home</a></li>
                  <li class="nav-item"><a class="nav-link text-white" href="/user/shop">Shop</a></li>
                  <li class="nav-item"><a class="nav-link text-white" href="#">About Us</a></li>
                  <li class="nav-item"><a class="nav-link text-white" href="#">Contact Us</a></li>
                </ul>
              </div>
              <div  class="collapse navbar-collapse" id="navbarNav"> 
                <div id="checkSession" data-session-check="<%= sessionCheck %>"></div>
                <ul class="navbar-nav ms-auto">
                  <li class="nav-item"><a class="nav-link" href="/user/userProfile"><img src="/image/icons/user-circle.svg" alt=""></a></li>
                  <li class="nav-item"><a class="nav-link" href="#"><img src="/image/icons/shopping bag.svg" alt=""></a>
                    <div id="loginMessage">
                      <button class="btn btn-primary btn-sm" onclick="redirectToLogin()">Login</button>
                    </div>
                  </li>
                  <li class="nav-item text-white">2</li>
                </ul>
              </div>
            </div>
          </nav>
          <div class="container my-5 bannerDiv">
            <div class="main-banner text-center text-md-end text-white">
              <h1>iPhone 16 Pro</h1>
              <p>Experience the best of technology with iPhone 16 Pro.</p>
              <a href="/user/shop" class="btn btn-primary btnShop">Shop Now</a>
            </div>
          </div>

          <div class="container my-5">
            <h2 class="text-center">iDeal Guarantees</h2>
            <div class="row mt-4">
              <div class="col-md-3">
                <div class="guarantee-card text-center p-3">
                  <video autoplay loop muted playsinline class="video-fluid">
                    <source src="/video/iphoneVideo2.mp4" type="video/mp4">
                  </video>
                  <p>New Condition</p>
                </div>
              </div>
              <div class="col-md-3">
                <div class="guarantee-card text-center p-3">
                  <video autoplay loop muted playsinline class="video-fluid">
                    <source src="/video/iphoneVideo.mp4" type="video/mp4">
                  </video>
                  <p>12-Month Warranty</p>
                </div>
              </div>
              <div class="col-md-3 d-flex justify-content-center">
                <div class="guarantee-card text-center p-3">
                  <div class="guaranteeImg1"></div>
                  <p>100% Battery Health</p>
                </div>
              </div>
              <div class="col-md-3 d-flex justify-content-center">
                <div class="guarantee-card text-center p-3">
                  <div class="guaranteeImg2"></div>
                  <p class="p-2">Fast Charger</p>
                </div>
              </div>
              </div>
            </div>
          </div>
  
          <div class="container my-5">
            <!-- New Arrivals Section -->
            <h2 class="text-center mb-5">New Arrivals</h2>
            <div class="position-relative newProductContainer">
              <!-- Backward Button -->
              <button id="scroll-back" class="scroll-btn position-absolute start-0 top-50 translate-middle-y">
                &lt;
              </button>
          
              <!-- Scrollable Container -->
              <div id="scroll-container" class="d-flex gap-3" style="scroll-behavior: smooth;">
                <% recentAddProduct.slice(0, 10).forEach(product => { %>
                  <div data-product-id="<%= product._id %>" class="card h-100 shadow arrival-card" >
                    <div class="image-container position-relative m-4">
                      <img src="<%= product.images[0] %>" class="card-img-top img-fluid" alt="<%= product.name %>">
                      <span class="badge bg-danger position-absolute top-0 start-0 px-3 py-1">NEW</span>
                    </div>
                    <div class="card-body text-center">
                      <h6 class="card-title mb-2 mt-2">
                        <%= product.name %>
                      </h6>
                      <p class="text-muted mb-1 cardPrice">
                        Storage: <strong><%= product.storage %> GB</strong>
                      </p>
                      <p class="text-success fw-bold mb-0 cardPrice">Price: ₹<%= product.price %></p>
                    </div>
                  </div>
                <% }) %>
              </div>
          
              <!-- Forward Button -->
              <button id="scroll-forward" class="scroll-btn position-absolute end-0 top-50 translate-middle-y">
                &gt;
              </button>
            </div>
          
            <!-- Categories Section -->
            <div class="container my-5">
              <h2 class="text-center mb-5 mt-4">Explore Categories</h2>
              <div class="position-relative">
                <!-- Backward Button -->
                <button id="scroll-backwardCategory" class="scroll-btn position-absolute start-0 top-50 translate-middle-y">
                  &lt;
                </button>
          
                <!-- Scrollable Container -->
                <div id="scroll-container-category" class="scroll-container d-flex gap-5">
                  <% categories.forEach(category => { %>
                    <div  data-category-id="<%= category.id %>" class="category-card text-center flex-shrink-0">
                      <img 
                        src="<%= categoryImages[category.id] %>" 
                        class="img-fluid category-image" 
                        alt="<%= category.name %>"
                        style="width: 150px; height: 150px; border-radius: 50%; background-color: white;"
                      >
                      <p class="mt-3 fw-bold category-text"><%= category.name %></p>
                    </div>
                  <% }) %>
                </div>
          
                <!-- Forward Button -->
                <button id="scroll-forwardCategory" class="scroll-btn position-absolute end-0 top-50 translate-middle-y">
                  &gt;
                </button>
              </div>
            </div>
          </div>
          
  <div class="container my-5 bannerMainDiv">
