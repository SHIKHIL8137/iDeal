<%- include('partials/header.ejs') -%>
  <link rel="stylesheet" href="/user/otp/style.css">
</head>
<body>
  <div id="alertBox1" class="alert alert-success" role="alert">
   </div>
  <% if(message){ %>
    <div id="alertBox" class="alert alert-success" role="alert">
     <%= message %>
    </div>
    <% }%>
  <div class="row main">
    <div class="left col-md-6 p-0 d-flex justify-content-center">
      <img class="iDealLogo mt-4" src="/image/icons/LogoBlack.png" alt="iDealLogo">
    </div>
    <div class="right col-md-6 p-0">
      <div class="leftForm mx-auto ">
        <h2 class="fs-1 fw-bold">Sign Up</h2>
        <p class="dontxt mt-3" id="textArea"></p>
        <form action="/user/otpVarification" method="post">
          <div class="mb-3 mt-4 inputField">
            <input type="text" name="otp" class="form-control border-0 inpField" id="otp" placeholder="Enter the otp" required>
          </div>

          <div class="mb-4 mt-4">
            <div class="form-check d-flex justify-content-between p-0">
              <label class="form-check-label dontOtptxt" for="dontReceiveOTPCode">Don't receive OTP code ?</label>
              <p class="timerCount"><span id="timerCountNumber">52</span> Sec</p>
            </div>
            <button id="btnResend" disabled>Resend</button>
          </div>
          <button type="submit" class="btn btn-dark w-100">Verify  and Proceed </button>
        </form>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script type="application/json" id="userData"><%- JSON.stringify(email) %></script>
  <script src="/user/otp/script.js"></script>
  <%- include('partials/footer.ejs') -%>