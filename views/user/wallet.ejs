          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <!-- Sidebar -->
        <div class="sidebar d-flex flex-column col-md-3 gap-2">
          <a href="/user/userProfile">
            <i class="fas fa-user"></i> Account Details
          </a>
          <a href="/user/orderHistory">
            <i class="fas fa-clock"></i> Order History
          </a>
          <a href="/user/wallet" class="active">
            <i class="fas fa-wallet"></i> Wallet
          </a>
          <a href="/user/cart">
            <i class="fas fa-shopping-cart"></i> Shopping Cart
          </a>
          <a href="/user/wishlist">
            <i class="fas fa-heart"></i> Wishlist
          </a>
          <a href="/user/address">
            <i class="fas fa-map-marker-alt"></i> Address
          </a>
          <a href="/user/referral">
            <i class="fas fas fa-user-friends"></i> Referral
          </a>
          <a href="/user/logOut">
            <i class="fas fa-sign-out-alt"></i> Log-out
          </a>
        </div>

        <!-- Content -->
        <div class="col-md-9 content">
          <h2 class="mb-4">Wallet</h2>
          <div class="wallet-card">
            <i class="bi bi-wallet2 fs-1 mb-3"></i>
            <h1 id="walletBalance">
            </h1>
            <p class="text-secondary">My Wallet Balance</p>
            <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addMoneyModal">Add
              Money</button>
          </div>
          <div class="transaction-table">
            <h3 class="mb-4 mt-5">Transaction History</h3>
            <table class="table table-dark table-hover text-center">
              <thead>
                <tr>
                  <th scope="col">Transaction ID</th>
                  <th scope="col">Date</th>
                  <th scope="col">Withdrawal</th>
                  <th scope="col">Deposit</th>
                </tr>
              </thead>
              <tbody id="transactionTableBody">
              </tbody>
            </table>

            <div class="d-flex justify-content-between align-items-center">
              <span id="showingText" class="showing1-10Text"></span>
              <ul class="pagination justify-content-center">
                <li class="page-item">
                  <button class="page-link" id="prevPage" disabled>&laquo;</button>
                </li>
                <li class="page-item">
                  <button class="page-link" id="nextPage">&raquo;</button>
                </li>
              </ul>
            </div>
          </div>
        </div>

      </div>
    </div>
    <div class="footer">
      <div class="container">
        <div class="row align-items-center">
          <!-- Logo and Tagline -->
          <div class="col-md-4 text-center text-md-start">
