              <!-- Content -->
              <div class="col-md-9 col-12">
                <div class="container form-container">
                  <h4 class="mb-3">DELIVERY ADDRESS</h4>
                    <div class="row mb-3">
                      <div class="col-md-6">
                        <label for="firstName" class="form-label">First name</label>
                        <input type="text" class="form-control input-field" id="firstName" placeholder="First name"
                          name="fname">
                      </div>
                      <div class="col-md-6">
                        <label for="lastName" class="form-label">Last name</label>
                        <input type="text" class="form-control input-field" id="lastName" placeholder="Last name"
                          name="lname">
                      </div>
                    </div>

                    <div class="mb-3">
                      <label for="companyName" class="form-label">Company Name (Optional)</label>
                      <input type="text" class="form-control input-field" id="companyName" placeholder="Company name"
                        name="companyName">
                    </div>

                    <div class="mb-3">
                      <label for="address" class="form-label">House Name</label>
                      <input type="text" class="form-control input-field" id="address" placeholder="House Name"
                        name="houseName">
                    </div>

                    <div class="row mb-3">
                      <div class="col-md-6">
                        <label for="country" class="form-label">Country</label>
                        <select class="form-select input-field" id="country" name="country">
                          <option selected>Select...</option>
                          <option value="India">India</option>
                        </select>
                      </div>
                      <div class="col-md-6">
                        <label for="region" class="form-label">Region/State</label>
                        <input type="text" class="form-control input-field" id="state" placeholder="State" name="state">
                      </div>
                    </div>

                    <div class="row mb-3">
                      <div class="col-md-6">
                        <label for="city" class="form-label">City</label>
                        <input type="text" class="form-control input-field" id="city" placeholder="City" name="city">
                      </div>
                      <div class="col-md-6">
                        <label for="zipCode" class="form-label">Zip Code</label>
                        <input type="text" class="form-control input-field" id="zipCode" placeholder="Zip Code"
                          name="zipCode">
                      </div>
                    </div>

                    <div class="row mb-3">
                      <div class="col-md-6">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control input-field" id="email" placeholder="Email"
                          name="email">
                      </div>
                      <div class="col-md-6">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="text" class="form-control input-field" id="phone" placeholder="Phone Number"
                          name="phone">
                      </div>
                    </div>
                    <div class="float-end mt-2">
                      <button onclick="validateForm()" class="btn btn-primary" id="savebtn">Save</button>
                    </div>
                </div>
              </div>

            </div>
