            <li class="nav-item"><a class="nav-link" href="/user/cart"><img src="/image/icons/shopping bag.svg"
                  alt=""></a></li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-5 cartContainer">
      <h2 class="mb-4">Shopping Cart</h2>
      <div class="row">
        <!-- Shopping Cart Items -->
        <div class="col-md-8">
        </div>

        <div class="col-md-4">
          <form id="cartSummery">
            <div class="cart-summary">
              <h5 class="mb-3">Summary</h5>
              <p>Sub-total:
                <span class="float-end" id="totalAmount">₹0</span>
              </p>
              <p>Shipping Fees:
                <span class="float-end text-success" id="shippingFee">₹0</span>
              </p>
              <p id="categoryDiscountContainer">Category Offer Discount:
                <span class="float-end text-danger" id="categoryDiscound">₹0</span>
              </p>
              <hr>
              <p class="fw-bold">Total:
                <span class="float-end" id="finalTotal">₹0</span>
              </p>
              <button class="btn btn-primary btn-block mt-4 w-100" id="btnCheckout">
                Check Out
              </button>
            </div>
          </form>

        </div>
      </div>
    </div>


    <div class="footer">
      <div class="container">
        <div class="row align-items-center">
          <!-- Logo and Tagline -->
          <div class="col-md-4 text-center text-md-start">
