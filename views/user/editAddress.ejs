<%- include('partials/header.ejs') -%>
    <link rel="stylesheet" href="/user/address/style.css">
</head>
<body>
  <% if (message && errBoolean) { %>
    <div id="alertBox" class="alert alert-success" role="alert">
      <%= message %>
    </div>
  <% } else if (message && !errBoolean) { %>
    <div id="alertBox" class="alert alert-danger" role="alert">
      <%= message %>
    </div>
  <% } %>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="#"><img class="logoImag" src="/image/icons/LogoBlack.png" alt="iDeal Logo"></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link text-white" href="/user/home">Home</a></li>
          <li class="nav-item"><a class="nav-link text-white" href="/user/shop">Shop</a></li>
          <li class="nav-item"><a class="nav-link text-white" href="#">About Us</a></li>
          <li class="nav-item"><a class="nav-link text-white" href="#">Contact Us</a></li>
        </ul>
      </div>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="#"><img src="/image/icons/user-circle.svg" alt=""></a></li>
          <li class="nav-item"><a class="nav-link" href="#"><img src="/image/icons/shopping bag.svg" alt=""></a></li>
          <li class="nav-item text-white">2</li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container" id="container-div">
    <div class="row pageMainrow">
      <!-- Content -->
      <div class="col-md-12">
        <div class="container form-container">
          <h4 class="mb-3">Edit ADDRESS</h4>
          <form action="/user/saveAddress" method="post">
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="firstName" class="form-label">First name</label>
                <input type="text" class="form-control input-field" id="firstName" placeholder="First name" name="fname" value="<%= editedAddress.fname %>">
              </div>
              <div class="col-md-6">
                <label for="lastName" class="form-label">Last name</label>
                <input type="text" class="form-control input-field" id="lastName" placeholder="Last name" name="lname" value="<%= editedAddress.lname %>">
              </div>
            </div>
      
            <div class="mb-3">
              <label for="companyName" class="form-label">Company Name (Optional)</label>
              <input type="text" class="form-control input-field" id="companyName" placeholder="Company name" name="companyName" value="<%= editedAddress.companyName %>">
            </div>
      
            <div class="mb-3">
              <label for="address" class="form-label">House Name</label>
              <input type="text" class="form-control input-field" id="address" placeholder="House Name" name="houseName" value="<%= editedAddress.houseName %>">
            </div>
      
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="country" class="form-label">Country</label>
                <select class="form-select input-field" id="country" name="country">
                  <option value="India">India</option>
                </select>
              </div>
              <div class="col-md-6">
                <label for="region" class="form-label">Region/State</label>
                <input type="text" class="form-control input-field" id="state" placeholder="State" name="state" value="<%= editedAddress.state %>">
              </div>
            </div>
      
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="city" class="form-label">City</label>
                <input type="text" class="form-control input-field" id="city" placeholder="City" name="city" value="<%= editedAddress.city %>">
              </div>
              <div class="col-md-6">
                <label for="zipCode" class="form-label">Zip Code</label>
                <input type="text" class="form-control input-field" id="zipCode" placeholder="Zip Code" name="zipCode" value="<%= editedAddress.zipCode %>">
              </div>
            </div>
      
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control input-field" id="email" placeholder="Email" name="email" value="<%= editedAddress.email %>">
              </div>
              <div class="col-md-6">
                <label for="phone" class="form-label">Phone Number</label>
                <input type="text" class="form-control input-field" id="phone" placeholder="Phone Number" name="phone" value="<%= editedAddress.phone %>">
              </div>
            </div>
            <div class="float-end mt-2">
              <button type="submit" class="btn btn-outline-danger">Cancel</button>
              <button type="submit" class="btn btn-outline-primary">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
      
    </div>
  </div>
  <div class="footer">
    <div class="container">
      <div class="row align-items-center">
        <!-- Logo and Tagline -->
        <div class="col-md-4 text-center text-md-start">
          <div class="footer-logo">
            <img src="/image/icons/LogoBlack.png" alt="iDeal Logo">
            <span>| <span class="footerSpan"> Used iPhone Store</span></span>
          </div>
        </div>
        
        <!-- Navigation Links -->
        <div class="col-md-4 text-center">
          <a href="/user/home">Home</a>
          <a href="/user/shop">Shop</a>
          <a href="#">About Us</a>
          <a href="#">Contact Us</a>
        </div>
        
        <!-- Social Media Icons -->
        <div class="col-md-4 text-center text-md-end social-icons pt-3">
          <a href="#"><img src="/image/icons/instagram.svg" alt=""></a>
          <a href="#"><img src="/image/icons/facebook.svg" alt=""></a>
          <a href="#"><img src="/image/icons/youtube.svg" alt=""></a>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col text-center text-md-start">
          <small class="footerSpan">Copyright Â© 2023 iDeal. All rights reserved.</small>
        </div>
        <div class="col text-center text-md-end">
          <a href="#" class="footerSpan">Privacy Policy</a>
          <a href="#" class="footerSpan">Terms of Use</a>
        </div>
      </div>
    </div>
  </div>


  <div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reviewModalLabel">Write a Review</h5>
                <button type="button" class="btn-close custom-btn" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <!-- Rating Radio Buttons -->
                    <div class="mb-3">
                        <label class="form-label">Rating</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="rating1" name="rating" value="1">
                                <label class="form-check-label" for="rating1">1 - Poor</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="rating2" name="rating" value="2">
                                <label class="form-check-label" for="rating2">2 - Fair</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="rating3" name="rating" value="3">
                                <label class="form-check-label" for="rating3">3 - Good</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="rating4" name="rating" value="4">
                                <label class="form-check-label" for="rating4">4 - Very Good</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="rating5" name="rating" value="5">
                                <label class="form-check-label" for="rating5">5 - Excellent</label>
                            </div>
                        </div>
                    </div>

                    <!-- Feedback Textarea -->
                    <div class="mb-3">
                        <label for="feedback" class="form-label">Feedback</label>
                        <textarea class="form-control" id="feedback" name="feedback" rows="4" placeholder="Write your feedback here..."></textarea>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-outline-primary">Publish Review</button>
                </form>
            </div>
        </div>
    </div>
</div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
